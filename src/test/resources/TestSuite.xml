<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="Login Test" verbose="1" >
    <parameter name="user"  value="tomsmith"/>
    <parameter name="password"  value="SuperSecretPassword!"/>

    <parameter name="negativeuser"  value="tomsmit"/>


    <test name="Positive Login">
        <classes>
            <class name="com.herokuapp.LoginTest"/>
        </classes>
    </test>

    <test name="Negative Login">

        <classes>
            <class name="com.herokuapp.NegativeLoginTest"/>
        </classes>
    </test>

    <test name="Checkboxes Test">

        <classes>
            <class name="com.herokuapp.CheckboxesTests"/>
        </classes>
    </test>
    <test name="DropDown Test">

        <classes>
            <class name="com.herokuapp.DropDownTest"/>
        </classes>
    </test>
    <test name="FileUpload Test">

        <classes>
            <class name="com.herokuapp.FileUploadTest"/>
        </classes>
    </test>







</suite>
